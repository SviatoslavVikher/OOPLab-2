<Window x:Class="QuadraticEquationSolver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Розв'язок квадратного рівняння" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Введіть коефіцієнти рівняння:" HorizontalAlignment="Center" FontSize="16" Margin="0,10"/>

            <TextBox Name="aTextBox" Width="200" Margin="5" HorizontalAlignment="Center" PlaceholderText="Коефіцієнт a"/>
            <TextBox Name="bTextBox" Width="200" Margin="5" HorizontalAlignment="Center" PlaceholderText="Коефіцієнт b"/>
            <TextBox Name="cTextBox" Width="200" Margin="5" HorizontalAlignment="Center" PlaceholderText="Коефіцієнт c"/>

            <Button Content="Обчислити" Width="200" Margin="10" HorizontalAlignment="Center" Click="OnCalculateClick"/>

            <TextBlock Name="resultTextBlock" FontSize="14" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>


